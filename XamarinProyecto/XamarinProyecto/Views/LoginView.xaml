<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinProyecto.Views.LoginView"
             xmlns:viewmodels="clr-namespace:XamarinProyecto.ViewModels">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.BindingContext>
                <viewmodels:LoginViewModel/>
            </StackLayout.BindingContext>
            <!--<Label Text="Login "
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />-->
            <Entry x:Name="username" Text="{Binding Username}" Placeholder="username"/>
            <Entry x:Name="password" Text="{Binding Password}" Placeholder="password"/>
            <Button Command="{Binding Validar}" Text="Iniciar sesion" />
            <Label Text="{Binding Status}" FontSize="25" TextColor="Red" IsVisible="False"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>